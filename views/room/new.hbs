<div class="box">
    <div class="container">
        <h3>Add new room</h3>
        <hr>
        <form method="POST" action="/rooms" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputName">Room's name</label>
                <input type="text" name="name" class="form-control" id="exampleInputName" aria-describedby=""
                    placeholder="Street Park room">
            </div>
            <div class="form-group">
                <label for="validationTextarea">Description</label>
                <textarea class="form-control" name="description" id="validationTextarea"
                    placeholder="Street Park is a confy room with a bea..." required></textarea>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01" name="photo">
                        <label class="custom-file-label" for="inputGroupFile01">Choose Image</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
        </form>
        <a href="/rooms">Back to the rooms list</a>
    </div>
</div>