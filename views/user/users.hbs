
    <div class="box">
        <div class="container">
            <h1>Users
                <a href="/users/new"><button type="button" class="btn btn-success"><i
                            class="fas fa-user-plus"></i></button></a>
            </h1>
            <hr>
            <div class="card-decks">
                <div class="row">
                    {{#each users}}
                    <div class="col-sm-3">
                        <div class="card" style="margin-bottom:40px; border:2px solid rgba(0,0,0,.125)">
                            <span class="card-img-top img-fluid img-thumbnail"
                                style="background-image: url({{this.imgPath}}); width: 300px; height: 200px; background-size: cover; background-position: center;"></span>
                            <div class="card-body">
                                <h5 class="card-title">{{this.name}}</h5>
                                <a href="/users/{{this._id}}/edit" class="btn btn-dark"><i class="fas fa-cog"></i></a>
                            </div>
                        </div>
                    </div>

                    {{/each}}
                </div>
            </div>
        </div>
    </div>