<div class="box">
    <div class="container">
        <h1>Users
            <a href="/users/new"><button type="button" class="btn btn-success">+</button></a>
        </h1>
        <hr>
        <div class="card-decks">
            <div class="row">
            {{#each users}}
                <div class="col-sm-6">
                    <div class="card">
                        <img class="img-fluid img-thumbnail" src="{{this.imgPath}}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.
                            </p>
                            <a href="/users/{{this._id}}/edit" class="btn btn-info btn-md btn-block">edit</a>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</div>